<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background" android:height="3dp" android:gravity="center_vertical">
        <shape>
            <solid android:color="@android:color/transparent"/>
        </shape>
    </item>
    <item android:id="@android:id/progress" android:height="3dp" android:gravity="center_vertical">
        <clip>
            <shape>
                <gradient
                    android:type="linear"
                    android:centerColor="@android:color/holo_red_light"
                    android:endColor="@android:color/holo_red_dark"
                    android:startColor="@android:color/holo_orange_dark"/>
            </shape>
        </clip>
    </item>
</layer-list>